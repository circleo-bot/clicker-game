<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>轻松点一点</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            text-align: center;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .title {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .score-box {
            width: 100px;
            height: 100px;
            margin: 20px auto;
            background-color: #007bff;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 8px;
            color: white;
            font-size: 20px;
            cursor: pointer;
            transition: transform 0.1s ease, background-color 0.1s ease;
        }

        .score-box:active {
            transform: scale(0.95);
            background-color: #0056b3;
        }

        .points-display {
            margin-top: 20px;
            font-size: 18px;
        }

        .timer-display {
            margin-top: 10px;
            font-size: 18px;
            color: red;
        }

        .relax-message {
            margin-top: 10px;
            font-size: 16px;
            color: #555;
        }

        .leaderboard {
            margin-top: 20px;
            font-size: 18px;
            text-align: left;
            max-height: 200px;
            overflow-y: auto;
        }

        .leaderboard-title {
            font-size: 20px;
            margin-bottom: 10px;
            text-align: center;
        }

        .leaderboard-item {
            padding: 5px 10px;
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="title">轻松点一点</div>
        <div class="timer-display">倒计时: <span id="timer">60</span> 秒</div>
        <div class="score-box" id="scoreBox" onclick="incrementScore()">点击我</div>
        <div class="points-display">当前积分: <span id="points">0</span></div>
        <div class="relax-message">每天一分钟，快乐又放松</div>
        <div class="leaderboard">
            <div class="leaderboard-title">点击排行榜（前100名）</div>
            <div id="leaderboard-list">
                <div class="leaderboard-item">暂无数据</div>
            </div>
        </div>
    </div>

    <script>
        let points = 0;
        let clickCount = 0;
        let timeLeft = 60;
        let timerStarted = false;
        let timerInterval;
        let leaderboard = [];

        function startTimer() {
            timerInterval = setInterval(function () {
                timeLeft--;
                document.getElementById('timer').innerText = timeLeft;

                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    document.getElementById('scoreBox').onclick = null; // 禁用点击
                    saveScoreToLeaderboard(points);
                    alert(`时间到！您的总积分是: ${points}`);
                }
            }, 1000);
        }

        function incrementScore() {
            if (!timerStarted) {
                timerStarted = true;
                startTimer();
            }

            clickCount++;

            if (clickCount % 10 === 0) {
                points += 10; // 每第10次点击加10分
            } else {
                points += 1; // 其他情况加1分
            }

            document.getElementById('points').innerText = points;
        }

        function saveScoreToLeaderboard(score) {
            const username = prompt("请输入您的姓名进行排行：", "匿名玩家");
            if (username) {
                leaderboard.push({ name: username, score: score });
                leaderboard.sort((a, b) => b.score - a.score); // 按积分从高到低排序
                leaderboard = leaderboard.slice(0, 100); // 只保留前100名
                updateLeaderboard();
            }
        }

        function updateLeaderboard() {
            const leaderboardList = document.getElementById('leaderboard-list');
            leaderboardList.innerHTML = '';
            leaderboard.forEach((entry, index) => {
                const item = document.createElement('div');
                item.className = 'leaderboard-item';
                item.textContent = `${index + 1}. ${entry.name} - ${entry.score} 分`;
                leaderboardList.appendChild(item);
            });
        }
    </script>
</body>

</html>
